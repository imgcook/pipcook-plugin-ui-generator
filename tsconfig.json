{
  "compilerOptions": {
    "resolveJsonModule": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6" ],
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src",
    ".d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}